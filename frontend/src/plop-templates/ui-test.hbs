import { render, screen } from '@testing-library/react';
import {{pascalCase name}} from './{{camelCase name}}';

describe('{{pascalCase name}} (UI)', () => {
  test('renders content', () => {
    render(<{{pascalCase name}}>Hello</{{pascalCase name}}>);
    expect(screen.getByTestId('{{kebabCase name}}')).toHaveTextContent('Hello');
  });

  test('supports variant and size classes', () => {
    render(<{{pascalCase name}} variant="primary" size="lg" />);
    const el = screen.getByTestId('{{kebabCase name}}');
    expect(el.className).toMatch(/variant_/);
    expect(el.className).toMatch(/size_/);
  });

  test('allows polymorphic `as` prop', () => {
    render(
      <{{pascalCase name}} as="button" type="button">Click</{{pascalCase name}}>
    );
    const el = screen.getByRole('button');
    expect(el).toBeInTheDocument();
  });
});
