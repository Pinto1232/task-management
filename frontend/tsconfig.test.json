{
    "compilerOptions": {
        "target": "ES2022",
        "lib": ["ES2022", "DOM", "DOM.Iterable"],
        "module": "CommonJS",
        "skipLibCheck": true,
        "moduleResolution": "node",
        "noEmit": true,
        "jsx": "react-jsx",
        "strict": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "types": ["jest", "@testing-library/jest-dom", "node"]
    },
    "include": ["src/**/*", "src/types/**/*"]
}
