{
  "version": "0.2.0",
  "configurations": [
    {
      "name": ".NET: Run API (dotnet run)",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "Build Backend API",
      "program": "dotnet",
      "args": ["run"],
      "cwd": "${workspaceFolder}/backend/TaskManagement.Api",
      "console": "integratedTerminal",
      "stopAtEntry": false,
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development"
      },
      "launchBrowser": {
        "enabled": true,
        "args": "http://localhost:5174/swagger",
        "windows": {
          "command": "cmd.exe",
          "args": "/C start ${auto-detect-url}"
        }
      }
    }
  ]
}
